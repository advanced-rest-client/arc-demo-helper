{
  "name": "@advanced-rest-client/arc-demo-helper",
  "description": "An element to help create demo pages for ARC components",
  "version": "2.2.1",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "advanced-rest-client",
    "api-components",
    "demo"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-demo-helper.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-menu/issues",
    "email": "arc@mulesoft.com"
  },
  "homepage": "https://github.com/advanced-rest-client/arc-demo-helper",
  "dependencies": {
    "@advanced-rest-client/arc-icons": "^3.2.1",
    "@anypoint-web-components/anypoint-button": "^1.1.1",
    "@anypoint-web-components/anypoint-dropdown-menu": "^0.1.20",
    "@anypoint-web-components/anypoint-item": "^1.0.8",
    "@anypoint-web-components/anypoint-listbox": "^1.1.6",
    "@anypoint-web-components/anypoint-menu-button": "^0.1.4",
    "@anypoint-web-components/anypoint-switch": "^0.1.4",
    "@anypoint-web-components/anypoint-tabs": "^0.1.12",
    "@api-components/amf-helper-mixin": "^4.3.1",
    "@api-components/api-navigation": "^4.2.4",
    "@api-components/raml-aware": "^3.0.0",
    "@open-wc/dedupe-mixin": "^1.3.0",
    "@polymer/font-roboto": "^3.0.2",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "prismjs": "^1.22.0"
  },
  "peerDependencies": {
    "@advanced-rest-client/arc-events": "^0.2.10",
    "@advanced-rest-client/arc-ie": "^1.0.2",
    "@advanced-rest-client/bottom-sheet": "^3.2.2"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-events": "^0.2.10",
    "@advanced-rest-client/arc-ie": "^1.0.2",
    "@advanced-rest-client/bottom-sheet": "^3.2.2",
    "@api-components/api-model-generator": "^0.2.9",
    "@open-wc/eslint-config": "^4.0.1",
    "@open-wc/testing": "^2.5.32",
    "@web/dev-server": "^0.0.27",
    "@web/test-runner": "^0.10.1",
    "@web/test-runner-playwright": "^0.6.6",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "typescript": "^4.1.3",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "web-dev-server --app-index demo/index.html --node-resolve --open --watch --root-dir .",
    "test": "web-test-runner test/**/*.test.js --coverage --node-resolve --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner test/**/*.test.js --node-resolve --watch --playwright --browsers chromium",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json",
    "generate-model": "node demo/model.js",
    "prepare": "node demo/model.js"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
